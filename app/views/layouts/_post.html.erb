<div class="ui segment">
		<a class="ui right aligned blue header" href="#">
			<%= User.find(currentPost.user_id).username %>
		</a>
	
	<% if currentPost.post_type == 1 %>
		<hr>
		<div class="ui centered">
		<img class="ui centered big image" src="https://external-preview.redd.it/zBKGV2IC4afqCyMFak5K36ZhMv8DB0HGF1BAIl39PSw.jpg?width=960&crop=smart&auto=webp&s=d4641078e3ef4bf20b7ea7e1c2b3845fddb37473" >
		<p></p>
		</div>


	<h4 class="ui horizontal divider header">
	  Description
	</h4>
    <% end %>
    <p>
	<div class="ui container" >
		<div class="ui huge header">
		<%= currentPost.title %>
		</div>
		<%= currentPost.description %>
	</div>
	<h4 class="ui horizontal divider header">
	  Tags
	</h4>
	<div class="ui grid">
		<div class="thirteen wide column">
			<% for tag in Tagged.where(:post_id => currentPost.id) do %>

				<a class="ui blue small header" href="#"> <%= tag.tag %> </a> ,

			<% end %>
		</div>
		<div class="three wide column right aligned">
			<% if is_user_logged_in %>
			<button class="ui red button"> 
				<i class="heart icon"></i>
			</button>
			<% if currentPost.user_id == session[:user_id]%>
				<button class="ui active button"> 
					<i class="trash icon"></i>
				</button>
			<% end %>
			<% end %>
		</div>
	</div>
</div>
